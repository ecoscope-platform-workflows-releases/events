    "Event Density Map": {
      "type": "object",
      "description": "These settings show a grid-based heatmap showing where events are concentrated.",
      "ecoscope:task_group": true,
      "properties": {
        "events_meshgrid": {
          "additionalProperties": false,
          "properties": {
            "auto_scale_or_custom_cell_size": {
              "allOf": [
                {
                  "$ref": "#/$defs/AutoScaleOrCustomCellSize"
                }
              ],
              "default": {
                "auto_scale_or_custom": "Auto-scale"
              },
              "title": "",
              "ecoscope:advanced": true
            }
          },
          "required": [],
          "type": "object",
          "title": ""
        }
      },
      "uiSchema": {
        "ui:order": [
          "events_meshgrid"
        ]
      }
    }
  },
  "$defs": {
    "EarthRangerConnection": {
      "properties": {
        "name": {
          "title": "Data Source",
          "type": "string"
        }
      },
      "required": [
        "name"
      ],
      "title": "EarthRangerConnection",
      "type": "object"
    },
    "TemporalGrouper": {
      "oneOf": [
        {
          "const": "%Y",
          "title": "Year (example: 2024)"
        },
        {
          "const": "%B",
          "title": "Month (example: September)"
        },
        {
          "const": "%Y-%m",
          "title": "Year and Month (example: 2023-01)"
        },
        {
          "const": "%j",
          "title": "Day of the year as a number (example: 365)"
        },
        {
          "const": "%d",
          "title": "Day of the month as a number (example: 31)"
        },
        {
          "const": "%A",
          "title": "Day of the week (example: Sunday)"
        },
        {
          "const": "%H",
          "title": "Hour (24-hour clock) as number (example: 22)"
        },
        {
          "const": "%Y-%m-%d",
          "title": "Date (example: 2025-01-31)"
        }
      ],
      "title": "Time",
      "type": "string"
    },
    "ValueGrouper": {
      "oneOf": [
        {
          "const": "event_category",
          "title": "Event Category"
        },
        {
          "const": "event_type",
          "title": "Event Type"
        },
        {
          "const": "reported_by_name",
          "title": "Reported By Name"
        }
      ],
      "title": "Category",
      "type": "string"
    },
    "Coordinate": {
      "properties": {
        "x": {
          "title": "X",
          "type": "number"
        },
        "y": {
          "title": "Y",
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "title": "Coordinate",
      "type": "object"
    },
    "AutoScaleOrCustomCellSize": {
      "dependencies": {
        "auto_scale_or_custom": {
          "oneOf": [
            {
              "properties": {
                "auto_scale_or_custom": {
                  "enum": [
                    "Auto-Scale"
                  ]
                }
              }
            },
            {
              "properties": {
                "auto_scale_or_custom": {
                  "enum": [
                    "Customize"
                  ]
                },
                "grid_cell_size": {
                  "default": 5000,
                  "title": "Custom Raster Pixel Size (Meters)",
                  "type": "number"
                }
              },
              "required": [
                "grid_cell_size"
              ]
            }
          ]
        }
      },
      "properties": {
        "auto_scale_or_custom": {
          "default": "Auto-scale",
          "description": "Define the resolution of the raster grid (in meters per pixel). Auto-scale for an optimized grid based on the data, or Customize to set a specific resolution.",
          "enum": [
            "Auto-scale",
            "Customize"
          ],
          "title": "Auto Scale Or Custom",
          "type": "string"
        }
      },
      "title": "AutoScaleOrCustomCellSize",
      "type": "object"
    }
  },
  "additionalProperties": false,
  "uiSchema": {
    "ui:order": [
      "workflow_details",
      "er_client_name",
      "time_range",
      "get_events_data",
      "groupers",
      "filter_events",
      "events_bar_chart",
      "base_map_defs",
      "Event Density Map"
    ]
  }
}
